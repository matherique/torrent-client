{
  "include": ["src", "examples"],
  "compilerOptions": {
    "outDir": "./build/",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "lib": ["es6"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": false,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "strict": true
  }
}
